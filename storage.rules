rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific backup files
    match /users/{uid}/backups/{file} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
